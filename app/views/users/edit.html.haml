%h1 Update your profile

.row
  .span6.offset3
    = form_for(@user) do |f|
      = render 'shared/error_messages'

      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.text_field :email

      %p Only enter your password if you want to change it
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation, "Confirm your password"
      = f.password_field :password_confirmation

      = f.submit "Updated profile", class: "btn btn-large btn-primary"

    = gravatar_for @user
    = link_to("change", "http://gravatar.com/emails")