.row
  %aside.span4
    %section
      %h1= @group.name
      %p
        Organiser: 
        = @group.user.name
      - if !@group.limit.blank?
        %p
          Limit: 
          = h(@group.limit)
      - else
        %p No limit set please contact the organiser
    %section
      = render 'shared/participants_form'
  - unless @participants.blank?
    %h3 
      Participants
      = (@participants.count)
    %ul.participants
      = render @participants
      = will_paginate(@participants)
    = link_to "Match", "/groups/#{@group.id}/match", class: "btn btn-primary", method: 'post'